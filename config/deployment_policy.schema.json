{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "roi_forecast_min": {"type": "number"},
    "foresight_confidence_min": {"type": "number"},
    "allow_negative_dag": {"type": "boolean"}
  },
  "patternProperties": {
    "^(?!roi_forecast_min$|foresight_confidence_min$|allow_negative_dag$)[A-Za-z_][A-Za-z0-9_]*$": {
      "type": "object",
      "properties": {
        "thresholds": {
          "type": "object",
          "properties": {
            "raroi_min": {"type": "number"},
            "confidence_min": {"type": "number"},
            "scenario_min": {"type": "number"},
            "max_variance": {"type": "number"},
            "scenario_thresholds": {
              "type": "object",
              "additionalProperties": {"type": "number"}
            }
          },
          "additionalProperties": false
        },
        "reason_code": {"type": "string"},
        "optional_conditions": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z_][A-Za-z0-9_]*$": {
              "type": "object",
              "properties": {
                "condition": {"type": "string"},
                "reason_code": {"type": "string"}
              },
              "required": ["condition"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
