[Unit]
Description=Menace Service Supervisor
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/menace
ExecStart=/usr/bin/python -m menace.service_supervisor
Environment="MENACE_BOOTSTRAP_WAIT_SECS=240"
Environment="MENACE_BOOTSTRAP_VECTOR_WAIT_SECS=240"
Environment="BOOTSTRAP_STEP_TIMEOUT=240"
Environment="BOOTSTRAP_VECTOR_STEP_TIMEOUT=240"
Restart=always

[Install]
WantedBy=multi-user.target
